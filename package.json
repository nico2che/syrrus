{
  "name": "syrrus",
  "description": "AWS Glacier manager",
  "version": "0.0.2",
  "author": "Nicolas de Chevign√© <nicolas@chevigne.fr>",
  "main": "./process/main.js",
  "license": "UNLICENSED",
  "scripts": {
    "start": "run-p start:*",
    "start:electron": "NODE_ENV=dev nodemon --exec \"\"electron .\"\"",
    "start:react": "BROWSER=none react-scripts start",
    "test": "react-scripts test",
    "postinstall": "electron-builder install-app-deps",
    "postversion": "git push origin v$npm_package_version",
    "build": "run-s build:*",
    "build:react": "cross-env PUBLIC_URL=. react-scripts build",
    "build:app": "electron-builder build"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.5.0",
    "aws-sdk": "^2.804.0",
    "electron-context-menu": "^2.3.0",
    "electron-store": "^6.0.1",
    "electron-window-state": "^5.0.3",
    "history": "^5.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "react-virtualized-auto-sizer": "^1.0.2",
    "react-window": "^1.8.6",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "electron-is-dev": "^1.2.0",
    "electron-reload": "^1.5.0",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "redux-devtools": "^3.7.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "build": {
    "productName": "Syrrus",
    "appId": "fr.chevigne.syrrus",
    "extends": null,
    "files": [
      "./build/**/*",
      "./process/"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Utilities"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "nico2che",
      "repo": "syrrus",
      "private": false
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
